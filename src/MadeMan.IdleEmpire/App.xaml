<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MadeMan.IdleEmpire"
             xmlns:converters="clr-namespace:MadeMan.IdleEmpire.Converters"
             x:Class="MadeMan.IdleEmpire.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
            <converters:ProgressToWidthConverter x:Key="ProgressToWidth"/>
            <converters:ZeroToBoolConverter x:Key="ZeroToBool"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
