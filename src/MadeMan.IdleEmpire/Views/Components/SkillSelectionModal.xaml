<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MadeMan.IdleEmpire.ViewModels"
             x:Class="MadeMan.IdleEmpire.Views.Components.SkillSelectionModal"
             x:DataType="vm:MainViewModel"
             IsVisible="{Binding SkillVM.IsSelectionModalVisible}">

    <!-- Overlay -->
    <Grid BackgroundColor="#CC000000">

        <!-- Modal Container -->
        <Frame VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="20"
               Padding="20"
               BackgroundColor="{StaticResource Surface}"
               CornerRadius="16"
               BorderColor="Transparent">

            <VerticalStackLayout Spacing="16" WidthRequest="300">

                <!-- Title -->
                <Label Text="MILESTONE REACHED!"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gold}"
                       HorizontalOptions="Center"/>

                <Label Text="Choose a skill to unlock or upgrade:"
                       FontSize="14"
                       TextColor="{StaticResource TextSecondary}"
                       HorizontalOptions="Center"/>

                <!-- Skill Options -->
                <VerticalStackLayout Spacing="8"
                                     BindableLayout.ItemsSource="{Binding SkillVM.SelectionPool}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="vm:SkillChoiceModel">
                            <Frame Padding="12"
                                   BackgroundColor="{StaticResource Background}"
                                   CornerRadius="12"
                                   BorderColor="{StaticResource Primary}">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=SkillVM.SelectSkillCommand}"
                                        CommandParameter="{Binding Id}"/>
                                </Frame.GestureRecognizers>

                                <Grid ColumnDefinitions="44,*" ColumnSpacing="12">

                                    <!-- Icon -->
                                    <Frame Grid.Column="0"
                                           WidthRequest="44"
                                           HeightRequest="44"
                                           CornerRadius="22"
                                           BackgroundColor="{StaticResource Surface}"
                                           Padding="0"
                                           BorderColor="Transparent">
                                        <Label Text="{Binding Icon}"
                                               FontSize="22"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Frame>

                                    <!-- Info -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Text="{Binding Name}"
                                                   FontSize="15"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource TextPrimary}"/>
                                            <!-- NEW or Level Tag -->
                                            <Frame Grid.Column="1"
                                                   BackgroundColor="{StaticResource Primary}"
                                                   CornerRadius="4"
                                                   Padding="6,2"
                                                   BorderColor="Transparent">
                                                <Label Text="{Binding LevelTag}"
                                                       FontSize="10"
                                                       FontAttributes="Bold"
                                                       TextColor="White"/>
                                            </Frame>
                                        </Grid>
                                        <Label Text="{Binding Description}"
                                               FontSize="11"
                                               TextColor="{StaticResource TextSecondary}"
                                               LineBreakMode="TailTruncation"/>
                                        <!-- Effect Preview -->
                                        <Grid ColumnDefinitions="*,Auto,*" ColumnSpacing="4">
                                            <Label Text="{Binding CurrentEffectDisplay}"
                                                   FontSize="11"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   HorizontalTextAlignment="End"/>
                                            <Label Grid.Column="1"
                                                   Text="â†’"
                                                   FontSize="11"
                                                   TextColor="{StaticResource TextSecondary}"/>
                                            <Label Grid.Column="2"
                                                   Text="{Binding NextEffectDisplay}"
                                                   FontSize="11"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Gold}"/>
                                        </Grid>
                                    </VerticalStackLayout>

                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentView>
