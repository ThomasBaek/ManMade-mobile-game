<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MadeMan.IdleEmpire.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MadeMan.IdleEmpire.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="{StaticResource Surface}"
    Shell.TabBarTitleColor="{StaticResource Gold}"
    Shell.TabBarUnselectedColor="{StaticResource Smoke}"
    Shell.TabBarForegroundColor="{StaticResource Gold}">

    <TabBar>
        <!-- Empire Tab (Main gameplay) -->
        <ShellContent
            Title="Empire"
            Icon="tab_empire"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="Empire" />

        <!-- Organized Crime Tab (Locked) -->
        <ShellContent
            Title="Crime"
            Icon="tab_crime"
            ContentTemplate="{DataTemplate views:OrgCrimePage}"
            Route="OrgCrime" />

        <!-- Casino Tab (Locked) -->
        <ShellContent
            Title="Casino"
            Icon="tab_casino"
            ContentTemplate="{DataTemplate views:CasinoPage}"
            Route="Casino" />

        <!-- Skills Tab (Locked) -->
        <ShellContent
            Title="Skills"
            Icon="tab_skills"
            ContentTemplate="{DataTemplate views:SkillsTabPage}"
            Route="Skills" />

        <!-- Settings Tab -->
        <ShellContent
            Title="Settings"
            Icon="tab_settings"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="Settings" />
    </TabBar>

</Shell>
